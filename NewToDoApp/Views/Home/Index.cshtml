@{
    ViewBag.Title = "Home Page";
}

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="/Content/main.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css" />
    <link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" />

</head>
<body>
    <div class="jumbotron">
        <h1>Todo Apps</h1>
        <p class="lead">Todo Apps organize your life.</p>
    </div>
    <div ng-app="MyApp" ng-controller="MyController" class="container">
        <div class="input">
            <div class="form-group">
                <label for="exampleInputEmail1">Title</label>
                <input type="hidden" ng-model="status" />
              
                <input type="text" class="form-control" ng-model="title" aria-describedby="emailHelp" placeholder="Enter Title" required>
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Date</label>
                <input type="datetime-local" class="form-control" ng-model="date" aria-describedby="emailHelp" required>
            </div>

            <input type="button" value="Add" class="btn btn-success" ng-click="Add()" />
        </div>


        <div class="container">
            <center><p class="waiting">Waiting List</p></center>
            <div class="row">
                <div class="col-md-12">
                    <div class="scrollable">
                        <table id="waiting" class="table table-hover" cellpadding="0" cellspacing="0">
                            <tr>
                                <th style="width:100px">Task Id</th>
                                <th style="width:150px">Title</th>
                                <th style="width:150px">Date</th>
                                <th style="width:100px">Action</th>
                            </tr>

                            <tbody ng-repeat="m in ListDetail">
                                <tr>
                                    <td><span>{{m.LID}}</span></td>
                                    <td>
                                        <div class="form-group">
                                            <span ng-hide="m.EditMode">{{m.title}}</span>
                                            <input type="text" class="form-control" ng-model="m.title" ng-show="m.EditMode" />
                                        </div>

                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <span ng-hide="m.EditMode">{{m.date}}</span>
                                            <input type="datetime-local" class="form-control" ng-model="m.date" ng-show="m.EditMode" />
                                        </div>
                                    </td>
                                    <td>
                                        <button class="btn btn-success" ng-hide="m.EditMode"> <a class="Edit" id="nohover" href="javascript:;" ng-click="Done(m.LID)">Done</a></button>
                                        <button class="btn btn-primary" ng-show="m.EditMode"><a class="Update" id="nohover" href="javascript:;" ng-click="Update($index)">Update</a></button>
                                        <button class="btn btn-danger" ng-show="m.EditMode"><a class="Cancel" id="nohover" href="javascript:;" ng-click="Cancel($index)">Cancel</a></button>
                                        <button class="btn btn-primary" ng-hide="m.EditMode"> <a class="Edit" id="nohover" href="javascript:;" ng-click="Edit($index)">Edit</a></button>
                                        <button class="btn btn-danger" ng-hide="m.EditMode"><a id="nohover" href="javascript:;" ng-click="Delete(m.LID)">Delete</a></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
        <div class="container">
            <center><p class="done">Done List</p></center>
            <div class="row">
                <div class="col-md-12">
                    <div class="scrollable">
                        <table id="tblCustomers" class="table table-hover" cellpadding="0" cellspacing="0">
                            <tr>
                                <th style="width:100px">Task Id</th>
                                <th style="width:150px">Title</th>
                                <th style="width:150px">Date</th>
                                <th style="width:100px">Action</th>
                            </tr>
                            <tbody ng-repeat="j in donedata">
                                <tr>
                                    <td><span>{{j.LID}}</span></td>
                                    <td>
                                        <div class="form-group">
                                            <span ng-hide="j.EditMode">{{j.title}}</span>
                                            <input type="text" class="form-control" ng-model="j.title" ng-show="j.EditMode" />
                                        </div>

                                    </td>
                                    <td>
                                        <div class="form-group">
                                            <span ng-hide="j.EditMode">{{j.date}}</span>
                                            <input type="datetime-local" class="form-control" ng-model="j.date" ng-show="j.EditMode" />
                                        </div>
                                    </td>
                                    <td>
                                        <button class="btn btn-success" ng-hide="j.EditMode"> <a class="Edit" id="nohover" href="javascript:;" ng-click="Undo(j.LID)">Undo</a></button>
                                        <button class="btn btn-primary" ng-show="j.EditMode"><a class="Update" id="nohover" href="javascript:;" ng-click="DoneUpdate($index)">Update</a></button>
                                        <button class="btn btn-danger" ng-show="j.EditMode"><a class="Cancel" id="nohover" href="javascript:;" ng-click="DoneCancel($index)">Cancel</a></button>
                                        <button class="btn btn-primary" ng-hide="j.EditMode"> <a class="Edit" id="nohover" href="javascript:;" ng-click="DoneEdit($index)">Edit</a></button>
                                        <button class="btn btn-danger" ng-hide="j.EditMode"><a id="nohover" href="javascript:;" ng-click="Delete(j.LID)">Delete</a></button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>



    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js"></script>
    <script type="text/javascript" src="http://ajax.cdnjs.com/ajax/libs/json2/20110223/json2.js"></script>
    <script src="~/Scripts/myAngular.js">
    </script>
</body>
</html>